package study;

import java.util.Arrays;
import java.util.Scanner;

public class _11399 {

	public static void main(String[] args) {
	
		Scanner in = new Scanner(System.in);

		int n = in.nextInt();
		int[] arr = new int[n];
		
		for(int i=0; i<n; i++) {
			int num = in.nextInt();
		}
		
		Arrays.sort(arr);
		
		int sum = 0; // ÃÑ ÇÕ
		int fornt = 0; // ÀÌÀü °ª
		
		for(int i=0; i<n; i++) {
			sum += fornt + arr[i];
			fornt += arr[i];
		}
		
		System.out.println(sum);
	}

}
